<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#F5FFFA">
        <!-- Header Starts-->
        <LinearLayout
            android:id="@+id/summaryhead"
            android:layout_width="wrap_content"
            android:layout_height="90dip"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/my_achievement"
            android:orientation="vertical"></LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/summaryhead"
            android:orientation="vertical">

            <TextView
                android:id="@+id/gradeTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="TextView"
                android:textColor="#708090"
                android:textSize="15dp"
                android:textStyle="bold"
                android:typeface="sans" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight="1"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="110dp"
                    android:layout_marginTop="5dp"
                    android:text="Correct:"
                    android:textColor="#009ACD"
                    android:textSize="15dp"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/correctTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:text="TextView"
                    android:textColor="#708090"
                    android:textSize="15dp"
                    android:typeface="sans" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="110dp"
                    android:text="Wrong:"
                    android:textColor="#009ACD"
                    android:textSize="15dp"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/wrongTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="20dp"
                    android:text="TextView"
                    android:textColor="#708090"
                    android:textSize="15dp"
                    android:typeface="sans" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="110dp"
                    android:text="Give up:"
                    android:textColor="#009ACD"
                    android:textSize="15dp"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/giveupTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="20dp"
                    android:text="TextView"
                    android:textColor="#708090"
                    android:textSize="15dp"
                    android:typeface="sans" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="110dp"
                    android:text="Speed:"
                    android:textColor="#009ACD"
                    android:textSize="15dp"
                    android:typeface="monospace" />

                <TextView
                    android:id="@+id/totaltimeTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="20dp"
                    android:text="TextView"
                    android:textColor="#708090"
                    android:textSize="15dp"
                    android:typeface="sans" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="110dp"
                    android:text="Mark:"
                    android:textColor="#009ACD"
                    android:textSize="15dp"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/totalmarkTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="20dp"
                    android:text="TextView"
                    android:textColor="#708090"
                    android:textSize="15dp"
                    android:typeface="sans" />

            </LinearLayout>

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="230dp"
                android:fillViewport="true">

                <ListView
                    android:id="@+id/questionLvw"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"></ListView>
            </ScrollView>

            <Button
                android:id="@+id/tryBtn"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#F5FFFA"
                android:gravity="center"
                android:text="Try Again â˜ž"
                android:textColor="#009ACD"
                android:textSize="30dp"
                android:textStyle="bold" />
        </LinearLayout>


    </RelativeLayout>

</ScrollView>
